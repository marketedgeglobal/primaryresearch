{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Weekly Analysis Output",
  "type": "object",
  "required": [
    "generated_utc",
    "run_id",
    "rows_read",
    "rows_analyzed",
    "sheet_summary",
    "items"
  ],
  "properties": {
    "generated_utc": {
      "type": "string",
      "format": "date-time"
    },
    "run_id": {
      "type": "string"
    },
    "rows_read": {
      "type": "integer"
    },
    "rows_analyzed": {
      "type": "integer"
    },
    "sheet_summary": {
      "type": "object",
      "additionalProperties": false,
      "properties": {}
    },
    "top_tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "counts_by_status": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "integer",
          "number",
          "string",
          "boolean",
          "null"
        ]
      }
    },
    "deadline_overview": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "integer",
          "number",
          "string",
          "boolean",
          "null"
        ]
      }
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "summary"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "row_id": {
            "type": [
              "string",
              "null"
            ]
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "scores": {
            "type": "object",
            "additionalProperties": {
              "type": [
                "integer",
                "number",
                "string",
                "boolean",
                "null"
              ]
            }
          },
          "priority": {
            "type": "string"
          },
          "recommendation": {
            "type": "string"
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "description": "Suggested commit message: chore: add analysis_schema.json for validating AI output"
}
