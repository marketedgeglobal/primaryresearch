{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "generated_utc",
    "run_id",
    "rows_read",
    "rows_analyzed",
    "sheet_summary",
    "items"
  ],
  "properties": {
    "generated_utc": {"type": "string"},
    "run_id": {"type": "string"},
    "rows_read": {"type": "integer", "minimum": 0},
    "rows_analyzed": {"type": "integer", "minimum": 0},
    "sheet_summary": {"type": "string"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "summary"],
        "properties": {
          "title": {"type": "string"},
          "summary": {"type": "string"},
          "row_id": {"type": "string"},
          "tags": {"type": "array", "items": {"type": "string"}},
          "scores": {"type": "object"},
          "priority": {"type": "string"},
          "recommendation": {"type": "string"},
          "notes": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
